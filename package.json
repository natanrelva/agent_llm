{
  "name": "agent_llm",
  "version": "1.0.0",
  "description": "POC and demonstration platform for LLM agents with interactive chat interfaces.",
  "main": "dist/app.js",
  "scripts": {
    "build": "npx tsc && npm run copy-assets",
    "copy-assets": "copyfiles --up 1 src/modules/cs-rag/knowledge_base_cs.txt dist/modules/cs-rag && copyfiles --up 2 public/**/* dist",
    "start": "node dist/app.js",
    "dev": "nodemon --exec ts-node src/app.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:verbose": "jest --verbose",
    "debug": "node --inspect-brk ./node_modules/.bin/jest --runInBand"
  },
  "keywords": ["llm", "agent", "express", "ollama", "poc", "chat"],
  "author": "Nata Relva",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.9",
    "@types/supertest": "^6.0.0",
    "copyfiles": "^2.4.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3"
  },
  "dependencies": {
    "axios": "^1.7.2",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "ollama": "^0.5.2",
    "open": "^10.1.0"
  }
}